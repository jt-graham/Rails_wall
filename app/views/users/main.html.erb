<div class="container">
<!-- navbar -->
<nav class="navbar navbar-default">
		<div class="navbar-header">
			<a class="navbar-brand" href="/">The Wall</a>
		</div>
		<div class="navbar-right"><h4><%=@login_user[0].name%></h4><a href='/users/logout'>Logout</a></div>
